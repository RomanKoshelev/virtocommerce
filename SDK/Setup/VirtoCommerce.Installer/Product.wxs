    <Component Id="License" Directory="INSTALLFOLDER" Guid="CDFB4727-A341-4387-81BE-DCE402ADADC5">
      <File Id="License" Source="License.rtf" Checksum="yes" KeyPath="yes" Vital="yes"/>
