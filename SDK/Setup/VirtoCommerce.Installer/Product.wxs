    <ComponentGroup Id="Resources" Directory="Resources">
      <ComponentGroupRef Id="FrontEnd"/>
      <ComponentGroupRef Id="Configuration"/>
      <ComponentGroupRef Id="Database"/>
      <ComponentGroupRef Id="Catalog"/>
      <ComponentGroupRef Id="Admin"/>

