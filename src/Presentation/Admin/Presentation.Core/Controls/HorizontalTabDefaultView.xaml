<base:ViewBase xmlns:base="clr-namespace:VirtoCommerce.ManagementClient.Core.Infrastructure" 
    x:Class="VirtoCommerce.ManagementClient.Core.Controls.HorizontalTabDefaultView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="clr-namespace:VirtoCommerce.ManagementClient.Core.Controls" 
	
    mc:Ignorable="d" d:DataContext="{d:DesignInstance base:SubTabsDefaultViewModel}">
    <!-- other properties defined in styles: (default) and Virto_SubTabControl_Horizontal_Style-->
	<TabControl Name="tabControl" ItemsSource="{Binding SubItems}" SelectedItem="{Binding CurrentTab}" Padding="0" ClipToBounds="False" Loaded="FrameworkElement_OnLoaded" />
</base:ViewBase>
