                            </prism:InteractionRequestTrigger>
                        </i:Interaction.Triggers>-->

                        <Grid Margin="50,70,10,6">
                            <ContentControl Content="{TemplateBinding Content}"/>
                        </Grid>

                        <!--footer -->
