@model ItemModel

@{
    var itemClass = "item";
    if (Model.IsNew)
    {
        itemClass = string.Concat(@itemClass, " ", "new");
    }
    if (Model.IsSale)
    {
        itemClass = string.Concat(@itemClass, " ", "sale");
    }
}

